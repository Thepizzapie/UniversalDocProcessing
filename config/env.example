# ===========================================
# REQUIRED: OpenAI Configuration
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE_URL=https://api.openai.com/v1
MODEL_NAME=gpt-5
VISION_MODEL_NAME=gpt-4o

# ===========================================
# Security & Authentication
# ===========================================
# Optional: Comma-separated list of allowed Bearer tokens
# ALLOWED_TOKENS=token1,token2,token3

# ===========================================
# Processing Limits
# ===========================================
MAX_FILE_SIZE_MB=15
MAX_CONCURRENCY=4
RATE_LIMIT_PER_MIN=60
ALLOW_FILE_URLS=true

# ===========================================
# Optional: Distributed Rate Limiting
# ===========================================
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# Optional: MCP (Anthropic) Integration
# ===========================================
# Enable starting an external MCP server to provide tools and execution.
# When disabled (default), agents run locally without MCP.
ENABLE_MCP=false
# Command to start the MCP server (e.g. /usr/bin/my-mcp-server)
MCP_SERVER_CMD=
# Additional arguments to pass to MCP server command
MCP_SERVER_ARGS=
# Comma-separated allowlist/blocklist for tools discovered from MCP
ALLOWLIST_TOOLS=
BLOCKLIST_TOOLS=
