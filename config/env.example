# ===========================================
# REQUIRED: OpenAI Configuration
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE_URL=https://api.openai.com/v1
MODEL_NAME=gpt-5
VISION_MODEL_NAME=gpt-4o

# ===========================================
# Security & Authentication
# ===========================================
# Optional: Comma-separated list of allowed Bearer tokens
# ALLOWED_TOKENS=token1,token2,token3

# ===========================================
# Processing Limits
# ===========================================
MAX_FILE_SIZE_MB=15
MAX_CONCURRENCY=4
RATE_LIMIT_PER_MIN=60
ALLOW_FILE_URLS=true

# ===========================================
# Optional: Distributed Rate Limiting
# ===========================================
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# Optional: MCP Server Integration
# ===========================================
# ENABLE_MCP=false                         # Enable MCP integration
# MCP_SERVER_CMD=/path/to/mcp_server       # Command to start MCP server
# MCP_SERVER_ARGS=--port 8000              # Arguments for MCP server command
# ALLOWLIST_TOOLS=tool1,tool2              # Optional tool allowlist
# BLOCKLIST_TOOLS=tool3,tool4              # Optional tool blocklist
